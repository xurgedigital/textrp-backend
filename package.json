{
  "name": "xrpl-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.ts",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build",
    ".idea",
    "node_modules",
    "yark.lock"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.5",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@types/proxy-addr": "^2.0.0",
    "@types/socket.io": "^3.0.2",
    "@types/source-map-support": "^0.5.6",
    "@types/twilio": "^3.19.3",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "pino-pretty": "^9.4.0",
    "prettier": "^2.8.4",
    "typescript": "~4.6",
    "youch": "^3.2.3",
    "youch-terminal": "^2.2.0"
  },
  "dependencies": {
    "@adonisjs/ally": "^4.1.5",
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/bouncer": "^2.3.0",
    "@adonisjs/core": "^5.8.0",
    "@adonisjs/limiter": "^1.0.1",
    "@adonisjs/lucid": "^18.3.0",
    "@adonisjs/lucid-slugify": "^2.2.1",
    "@adonisjs/mail": "^8.1.2",
    "@adonisjs/redis": "^7.3.2",
    "@adonisjs/repl": "^3.1.0",
    "@adonisjs/route-model-binding": "^1.0.1",
    "@adonisjs/session": "^6.4.0",
    "@adonisjs/shield": "^7.1.0",
    "@rocketseat/adonis-bull": "^0.3.0",
    "@setten/bull-queue": "^1.0.1",
    "@twilio/conversations": "^2.2.2",
    "@verful/notifications": "^2.0.3",
    "adonis-lucid-filter": "^4.1.0",
    "adonis-twilio-provider": "^2.0.0",
    "luxon": "^3.2.1",
    "mysql2": "^3.1.2",
    "pg": "^8.9.0",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.6.1",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.4",
    "twilio": "^4.8.0",
    "verify-xrpl-signature": "^0.4.1",
    "xrpl": "^2.7.0",
    "xumm-oauth2-pkce": "^2.7.6",
    "xumm-sdk": "^1.7.6"
  }
}
